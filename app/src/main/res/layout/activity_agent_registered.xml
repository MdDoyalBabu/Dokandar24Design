<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SellerActivity.SellerRegisteredActivity">

    <include
        layout="@layout/appbar_layout"
        android:id="@+id/agent_reg_appbar"
        />



    <ScrollView

        android:layout_below="@id/agent_reg_appbar"
        android:layout_marginTop="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            app:cardCornerRadius="8dp"
            app:contentPadding="5dp"
            android:layout_margin="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">




            <LinearLayout
                android:layout_margin="20dp"
                android:id="@+id/linearLaout_main"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">



                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_gravity="center_horizontal"
                    android:background="@color/white"
                    android:src="@drawable/reg_icon2"
                    android:layout_width="150dp"
                    android:layout_height="150dp"/>




                <soup.neumorphism.NeumorphCardView
                    app:neumorph_shapeType="basin"
                    app:neumorph_shapeAppearance="@style/CustomShapeAppearance"
                    android:background="@drawable/border"
                    style="@style/Widget.Neumorph.CardView"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_margin="10dp">


                    <EditText

                        android:drawableStart="@drawable/name"
                        android:inputType="text"
                        android:hint="@string/enter_your_name"
                        android:id="@+id/name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:textCursorDrawable="@drawable/cursor_layout" />


                </soup.neumorphism.NeumorphCardView>
                <soup.neumorphism.NeumorphCardView


                    app:neumorph_shapeType="basin"
                    app:neumorph_shapeAppearance="@style/CustomShapeAppearance"
                    android:background="@drawable/border"
                    style="@style/Widget.Neumorph.CardView"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_margin="10dp">


                    <EditText

                        android:drawableStart="@drawable/phone"
                        android:inputType="number"
                        android:hint="@string/enter_your_phone_number"
                        android:id="@+id/phoneNumber"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:textCursorDrawable="@drawable/cursor_layout" />


                </soup.neumorphism.NeumorphCardView>
                <soup.neumorphism.NeumorphCardView

                    app:neumorph_shapeType="basin"
                    app:neumorph_shapeAppearance="@style/CustomShapeAppearance"
                    android:background="@drawable/border"
                    style="@style/Widget.Neumorph.CardView"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_margin="10dp">


                    <EditText

                        android:drawableStart="@drawable/password"
                        android:id="@+id/password"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:hint="@string/password"
                        android:inputType="textPassword"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:textCursorDrawable="@drawable/cursor_layout" />


                </soup.neumorphism.NeumorphCardView>
                <soup.neumorphism.NeumorphButton

                    android:id="@+id/create_btn"
                    android:layout_marginTop="20dp"
                    app:neumorph_shadowElevation="6dp"
                    app:neumorph_shadowColorLight="#fff"
                    style="@style/Widget.Neumorph.Button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Registered"
                    android:textColor="@color/white"
                    app:neumorph_backgroundColor="@color/black" />



                <TextView
                    android:textAlignment="center"
                    android:layout_marginBottom="50px"
                    android:textColor="#1B0303"
                    android:textStyle="italic"
                    android:textSize="15sp"
                    android:id="@+id/login_textView_agent"
                    android:layout_marginTop="10dp"
                    android:text="Already Have An Account?Login "
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


            </LinearLayout>







        </androidx.cardview.widget.CardView>
    </ScrollView>



</RelativeLayout>