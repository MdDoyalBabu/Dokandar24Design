<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DDD6D6"
    tools:context=".AgetProfileMainActivity.AgentUpdateProfileActivity">


    <include
        layout="@layout/appbar_layout"
        android:id="@+id/update_appbar"
        />



    <ScrollView
        android:layout_below="@id/update_appbar"
        android:layout_marginTop="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView

            app:cardCornerRadius="8dp"
            app:contentPadding="1dp"
            android:layout_margin="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">




            <LinearLayout
                android:layout_margin="30dp"
                android:id="@+id/linearLaout_main"
                android:orientation="vertical"
                android:padding="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:layout_marginTop="2dp"
                    android:text="@string/email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>



                <soup.neumorphism.NeumorphCardView


                    app:neumorph_shapeType="basin"
                    app:neumorph_shapeAppearance="@style/CustomShapeAppearance"
                    android:background="@drawable/border"
                    style="@style/Widget.Neumorph.CardView"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_margin="0dp">

                    <EditText
                        android:inputType="textEmailAddress"
                        android:hint="@string/email"
                        android:id="@+id/email"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:textCursorDrawable="@drawable/cursor_layout" />




                </soup.neumorphism.NeumorphCardView>







                <Spinner
                    android:id="@+id/countryName"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <Spinner
                    android:id="@+id/region"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


                <TextView
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:layout_marginTop="5dp"
                    android:text="@string/thana"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>



                <soup.neumorphism.NeumorphCardView


                    app:neumorph_shapeType="basin"
                    app:neumorph_shapeAppearance="@style/CustomShapeAppearance"
                    android:background="@drawable/border"
                    style="@style/Widget.Neumorph.CardView"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_margin="0dp">

                    <EditText
                        android:inputType="text"
                        android:hint="@string/thana"
                        android:id="@+id/thana"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:textCursorDrawable="@drawable/cursor_layout" />




                </soup.neumorphism.NeumorphCardView>



                <TextView

                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:layout_marginTop="10dp"
                    android:text="@string/area"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>



                <soup.neumorphism.NeumorphCardView


                    app:neumorph_shapeType="basin"
                    app:neumorph_shapeAppearance="@style/CustomShapeAppearance"
                    android:background="@drawable/border"
                    style="@style/Widget.Neumorph.CardView"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_margin="0dp">

                    <EditText
                        android:inputType="text"
                        android:hint="@string/area"
                        android:id="@+id/area"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:textCursorDrawable="@drawable/cursor_layout" />




                </soup.neumorphism.NeumorphCardView>



                <TextView

                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:layout_marginTop="10dp"
                    android:text="@string/houseRoadNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>



                <soup.neumorphism.NeumorphCardView


                    app:neumorph_shapeType="basin"
                    app:neumorph_shapeAppearance="@style/CustomShapeAppearance"
                    android:background="@drawable/border"
                    style="@style/Widget.Neumorph.CardView"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_margin="0dp">

                    <EditText
                        android:inputType="text"
                        android:hint="@string/houseRoadNo"
                        android:id="@+id/house_Road_no"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:textCursorDrawable="@drawable/cursor_layout" />




                </soup.neumorphism.NeumorphCardView>
                <TextView

                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:layout_marginTop="10dp"
                    android:text="@string/homeaddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


                <soup.neumorphism.NeumorphCardView


                    app:neumorph_shapeType="basin"
                    app:neumorph_shapeAppearance="@style/CustomShapeAppearance"
                    android:background="@drawable/border"
                    style="@style/Widget.Neumorph.CardView"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_margin="0dp">

                    <EditText
                        android:inputType="text"
                        android:hint="@string/homeaddress"
                        android:id="@+id/homeAddress"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:textCursorDrawable="@drawable/cursor_layout" />




                </soup.neumorphism.NeumorphCardView>
                <soup.neumorphism.NeumorphButton

                    android:id="@+id/primary_id"
                    android:layout_marginTop="20dp"
                    app:neumorph_shadowElevation="6dp"
                    app:neumorph_shadowColorLight="#fff"
                    style="@style/Widget.Neumorph.Button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Primary"
                    android:textColor="@color/white"
                    app:neumorph_backgroundColor="@color/black" />




            </LinearLayout>







        </androidx.cardview.widget.CardView>
    </ScrollView>



</RelativeLayout>