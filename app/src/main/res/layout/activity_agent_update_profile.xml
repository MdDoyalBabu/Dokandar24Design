<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="#DDD6D6"
    tools:context=".AgetProfileMainActivity.AgentUpdateProfileActivity">

    <ScrollView
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView

            app:cardCornerRadius="8dp"
            app:contentPadding="5dp"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">




            <LinearLayout
                android:layout_margin="30dp"
                android:id="@+id/linearLaout_main"
                android:orientation="vertical"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:layout_marginTop="2dp"
                    android:text="@string/email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <EditText
                    android:layout_marginTop="5dp"
                    android:background="@drawable/border"
                    android:inputType="textEmailAddress"
                    android:padding="10dp"
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


                <Spinner
                    android:id="@+id/countryName"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <Spinner
                    android:id="@+id/region"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


                <TextView
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:layout_marginTop="5dp"
                    android:text="@string/thana"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <EditText

                    android:layout_marginTop="5dp"
                    android:background="@drawable/border"
                    android:inputType="textMultiLine"
                    android:padding="10dp"
                    android:id="@+id/thana"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView

                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:layout_marginTop="10dp"
                    android:text="@string/area"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <EditText

                    android:layout_marginTop="5dp"
                    android:background="@drawable/border"
                    android:inputType="textMultiLine"
                    android:padding="10dp"
                    android:id="@+id/area"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView

                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:layout_marginTop="10dp"
                    android:text="@string/houseRoadNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <EditText
                    android:layout_marginTop="5dp"
                    android:background="@drawable/border"
                    android:padding="10dp"
                    android:id="@+id/house_Road_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView

                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:layout_marginTop="10dp"
                    android:text="@string/homeaddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <EditText
                    android:layout_marginTop="5dp"
                    android:background="@drawable/border"
                    android:inputType="text"
                    android:padding="10dp"
                    android:id="@+id/homeAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


                <Button
                    android:textSize="20sp"
                    android:id="@+id/primary_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="30dp"
                    android:background="@color/nil"
                    android:padding="10dp"
                    android:text="@string/primary"
                    android:textAllCaps="false"
                    android:textColor="#fff">

                </Button>




            </LinearLayout>







        </androidx.cardview.widget.CardView>
    </ScrollView>



</RelativeLayout>